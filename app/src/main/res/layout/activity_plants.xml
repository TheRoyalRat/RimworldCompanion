                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Pincushion Cactus" />

            <Button
                android:id="@+id/btn_potato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
