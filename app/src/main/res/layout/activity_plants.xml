            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_agarilux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Agarilux" />

            <Button
                android:id="@+id/btn_agave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Agave" />

            <Button
                android:id="@+id/btn_ambrosia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Ambrosia Bush" />

            <Button
                android:id="@+id/btn_astragalus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Astragalus" />

            <Button
                android:id="@+id/btn_berry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Berry Bush" />

            <Button
                android:id="@+id/btn_bush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Bush" />

            <Button
                android:id="@+id/btn_cocoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Cocoa Tree" />

            <Button
                android:id="@+id/btn_corn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
